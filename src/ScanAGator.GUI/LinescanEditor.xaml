<Window x:Class="ScanAGator.GUI.LinescanEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScanAGator.GUI"
        xmlns:ScottPlot="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Background="WhiteSmoke"
        MinWidth="800"
        Width="600"
        MinHeight="600"
        Height="600"
        WindowStartupLocation="CenterScreen"
        Title="Scan-A-Gator Linescan Analysis Tool">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <local:LinescanSelectorControl Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"/>

        <local:SettingsControl Grid.Row="0" Grid.Column="1"/>
        <local:StructureControl Grid.Row="0" Grid.Column="2"/>

        <local:ResultsControl Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
