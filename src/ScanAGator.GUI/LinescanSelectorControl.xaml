<UserControl x:Class="ScanAGator.GUI.LinescanSelectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScanAGator.GUI"
             mc:Ignorable="d" 
             Background="WhiteSmoke"
             MinWidth="250"
             MinHeight="250"
             d:DesignHeight="450" d:DesignWidth="250">
    <DockPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="2">

        <GroupBox DockPanel.Dock="Bottom" Header="Reference" Margin="5" >
            <DockPanel>
                <Slider DockPanel.Dock="Bottom" Orientation="Horizontal" />
                <Canvas Height="200px" Width="200px" Background="LightBlue" />
            </DockPanel>
        </GroupBox>

        <GroupBox Header="Folders" Margin="5" >
            <TreeView BorderThickness="0"/>
        </GroupBox>

    </DockPanel>
</UserControl>
